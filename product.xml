<?xml version="1.0" encoding="UTF-8"?>
<products>
	<product name="accmodel-aloha-gui" version="0.4.8" directory="accmodel/aloha/accmodel-aloha-gui">
		<dependencies>
			<dep product="spring-core" />
			<dep product="spring-context" />
			<dep product="jama" />
			<dep product="jdataviewer" />

			<dep product="slf4j-log4j12" />

			<dep product="accsoft-gui-frame" />
			<dep product="guava" />
			<dep product="accsoft-commons-io" />
			<dep product="commons-cli" />
			<dep product="commons-beanutils" />
			<dep product="commons-collections" />
			<dep product="commons-digester" />
			<dep product="commons-logging" />
			<dep product="accsoft-steering-commons" />
			<dep product="accmodel-jmad-gui-bare" />

			<dep product="accmodel-jmad-core" version="CTX" />
			<dep product="accmodel-jmad-models-lhc" resolvealias="false" version="PRO" />
			<dep product="accmodel-jmad-models-psb" resolvealias="false" version="PRO" />
			<dep product="accmodel-jmad-models-sps" resolvealias="false" version="PRO" />
			<dep product="accmodel-jmad-models-leir" resolvealias="false" version="PRO" />
			<dep product="accmodel-jmad-models-lhctransfer" resolvealias="false" version="PRO" />


			<dep product="junit" local="true" excluded="true" />
			<dep product="easymock" local="true" excluded="true" />
			<dep product="easymock-class-ext" local="true" excluded="true" />
		</dependencies>
		<application name="accmodel-aloha-gui" title="aloha - response analysis">
			<initial-heap-size>100m</initial-heap-size>
			<max-heap-size>1024m</max-heap-size>
			<java-vm-args>-Dcom.sun.management.jmxremote</java-vm-args>
			<java-vm-args>-Dcern.jmad.gui.edit.cmd=nedit</java-vm-args>
			<main-class name="cern.accsoft.steering.aloha.Aloha">
				<arg>--input-path=/user/slops/data/SPS_DATA/OP_DATA/steering</arg>
				<arg>--output-path=/user/slops/data/SPS_DATA/OP_DATA/aloha</arg>
			</main-class>
		</application>
		<application name="accmodel-aloha-gui-rdebug" title="aloha - response analysis">
			<initial-heap-size>100m</initial-heap-size>
			<max-heap-size>1024m</max-heap-size>
			<java-vm-args>-Xdebug;-Xrunjdwp:transport=dt_socket,address=1044,server=y,suspend=y
			</java-vm-args>
			<main-class name="cern.accsoft.steering.aloha.Aloha">
				<arg>--input-path=/user/slops/data/SPS_DATA/OP_DATA/steering</arg>
				<arg>--output-path=/user/slops/data/SPS_DATA/OP_DATA/aloha</arg>
			</main-class>
		</application>
	</product>
</products>

